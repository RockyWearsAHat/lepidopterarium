{
  "trailingComma": "es5",
  "tabWidth": 2,
  "printWidth": 110,
  "semi": true,
  "singleQuote": false,
  "overrides": [
    {
      "files": ["*.handlebars", "**/*.handlebars", "**/**/*.handlebars"],
      "options": {
        "parser": "glimmer"
      }
    },
    {
      "files": ["*.html", "legacy/**/*.js"],
      "options": {
        "tabWidth": 4
      }
    }
  ]
}
